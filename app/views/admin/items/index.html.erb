<div class="header-bar row">
  <h3>Items</h3>
  <%= link_to "New Item", new_admin_item_path, class: "add button" %>
</div>

<div class="row">
  <div class="twelve columns">
    <table class="table">
      <thead>
        <tr>
          <th>
            Title
          </th>
          <th>
            Price
          </th>
          <th>
            Created At
          </th>
          <th>
            Available
          </th>
          <th colspan=2>
            Edit
          </th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td>
              <%= link_to item.title, item_path(item) %>
            </td>
            <td>
              <%= number_to_currency(item.price) %>
            </td>
            <td>
              <%= item.created_at %>
            </td>
            <td>
              <% if item.available %>
                true
              <% else %>
                 
              <% end %>
            </td>

            <td>
              <%= link_to "Edit", edit_admin_item_path(item) %>
            </td>
            <td>
              <%= link_to "Delete", admin_item_path(item), method: :delete,
                data: { confirm: "Are you sure you want to delete order #{item.id}?" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
