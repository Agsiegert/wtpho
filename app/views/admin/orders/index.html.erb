<h2>Orders per status:</h2>
<% @status_counts.each do |k,v| %>
  <li><%= k.capitalize %>: <%= v %></li>
<% end %>

<h2>Orders:</h2>

<% @orders.each do |order| %>
  <ul>
    <li>ID: <%= order.id%></li>
    <li>User ID: <%= order.user_id %></li>
    <li>Order Subtotal: <%= number_to_currency(order.subtotal) %></li>
    <li>Status: <%= order.status %></li>
    <li>Created At: <%= order.created_at %></li>

    <li>Number of Items: <%= order.items.count %></li>
  </ul>
  <p><%= link_to "Edit Order", edit_admin_order_path(order) %></p>
  <p><%= link_to "View Order Details", admin_order_path(order) %></p>
  <p><%= link_to "Cancel Order", admin_order_path(order), method: :delete %></p>

<% end %>
