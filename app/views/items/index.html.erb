

<%= link_to "Pay Now", new_charge_path %>

<div class="menu-title twelve columns">
  <% if @category %>
    <h2><%= @category.title %></h2>
    <h3>The real deal folks...</h3>
  <% end %>
</div>

<div class="menus-nav three columns">
  <ul>
    <% @categories.each do |category| %>
      <li>
        <%= link_to category.title, menu_category_path(category.slug)  %>
      </li>
    <% end %>
  </ul>
</div>

<div class="items nine columns">
  <div class="row">
    <% @items.each do |item| %>
      <%= render "items/single_item_menu", :item => item %>
    <% end %>
  </div>
</div>
