<h1><%= @item.title %></h1>
<p><%= image_tag @item.image.url %></p>
<p><%= @item.description %></p>
<p><%= number_to_currency(@item.price) %></p>
<p><%= @item.created_at.to_s(:long) %></p>

<p><%= link_to "<< Back to Item List", items_path %></p>

<%if allow? "items", "edit" %>
  <%= link_to "Edit Item", edit_admin_item_path %>
<% end %>
